<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffDirectory.AddContactPage"
             Title="AddContactPage">
    <StackLayout Padding="20">
        <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
        <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="DepartmentEntry" Placeholder="Department" />
        <Entry x:Name="RoleEntry" Placeholder="Role" />
        <Entry x:Name="MobileEntry" Placeholder="Mobile Number" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Button Text="Save Contact" Clicked="OnSaveContactClicked" />
    </StackLayout>
</ContentPage>
