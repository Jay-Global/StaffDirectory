<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffDirectory.DetailPage"
             Title="DetailPage">
    <ScrollView>
        <StackLayout Padding="20">
            <!-- Use placeholders to indicate where the data will be displayed -->
            <Label x:Name="FirstNameLabel" Text="{Binding FirstName}" FontSize="Medium" />
            <Label x:Name="LastNameLabel" Text="{Binding LastName}" FontSize="Medium" />
            <Label x:Name="DepartmentLabel" Text="{Binding Department}" FontSize="Medium" />
            <Label x:Name="RoleLabel" Text="{Binding Role}" FontSize="Medium" />
            <Label x:Name="MobileLabel" Text="{Binding MobileNumber}" FontSize="Medium" />
            <Label x:Name="EmailLabel" Text="{Binding Email}" FontSize="Medium" />

            <!-- Buttons for modifying and deleting the contact -->
            <Button Text="Modify Contact" Clicked="OnModifyClicked" />
            <Button Text="Delete Contact" Clicked="OnDeleteClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>

